<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../testcase.xsl"?>
<testcase
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://xbrl.org/2005/conformance"
        name="EDINET.EC0132E"
        description="EDINET.EC0132E: Store the manifest file directly under the relevant folder."
        outpath=''
        owner="support@arelle.org"
        xsi:schemaLocation="http://xbrl.org/2005/conformance https://www.xbrl.org/2005/conformance.xsd">
    <variation id="invalid01" name="invalid01">
        <description>
            Manifest incorrectly named 'manifest.xml'.
            <!--valid09.zip with 'manifest_PublicDoc.xml' renamed.-->
        </description>
        <data>
            <instance readMeFirst="true">invalid01.zip</instance>
        </data>
        <result>
            <error>EDINET.EC0132E</error>
            <error>EDINET.EC0352E</error> <!-- renamed/invalid manifest name means invalid filename -->
        </result>
    </variation>
    <variation id="invalid02" name="invalid02">
        <description>
            Cover page is not named correctly.
            <!--valid09.zip with '0000000_header_*' renamed to '0000001_header_*'.-->
        </description>
        <data>
            <instance readMeFirst="true">invalid01.zip</instance>
        </data>
        <result>
            <error>EDINET.EC0132E</error>
            <error>EDINET.EC0352E</error> <!-- renamed/invalid cover page file means invalid filename -->
        </result>
    </variation>
</testcase>
