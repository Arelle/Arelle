<testcase
xmlns="http://xbrl.org/2008/conformance"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="
  http://xbrl.org/2008/conformance 
  ../../../infrastructure/test.xsd">
  <creator>
    <name>Herm Fischer</name>
    <email>fischer@markv.com</email>
  </creator>
  <number>43240</number>
  <name>Typed Dimension Filter Processing</name>
  <description>
    Test typed dimension filter processing.  Instance based on seven highest peaks per region of world.
  </description>
  <reference specification="DIMENSION-FILTER" id="sec-typed-dimension-filter"/>

  <variation id="V-01">
    <name>A dimension's value must be reported</name>
    <description>
      Facts missing the required dimension are reported to the
      resulting instance.  A complement typedDimension filter
      causes selection of those facts lacking the required dimension.
    </description>
    <reference specification="DIMENSION-FILTER" id="sec-typed-dimension-filter"/>
    <data>
      <schema>43240-dimension-test-concepts.xsd</schema>
      <linkbase>43240-dimension-test-concepts-definition.xml</linkbase>
      <linkbase>43240-missingHeight-formula.xml</linkbase>
      <instance readMeFirst="true">43240-sevenSummits-missingHeight-instance.xml</instance>
    </data>
    <result>
      <instance>43240-sevenSummits-missingHeight-result.xml</instance>
    </result>
  </variation>

  <variation id="V-02">
    <name>Filter on expression based on content of typed dimension</name>
    <description>
      Facts must be reported with the value eg:peakHeight &gt; 6000.
    </description>
    <reference specification="DIMENSION-FILTER" id="sec-typed-dimension-filter"/>
    <data>
      <schema>43240-dimension-test-concepts.xsd</schema>
      <linkbase>43240-dimension-test-concepts-definition.xml</linkbase>
      <linkbase>43240-minimumHeight-formula.xml</linkbase>
      <instance readMeFirst="true">43240-sevenSummits-minimumHeight-instance.xml</instance>
    </data>
    <result>
      <instance>43240-sevenSummits-minimumHeight-result.xml</instance>
    </result>
  </variation>


</testcase>

