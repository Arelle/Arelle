<testcase
xmlns="http://xbrl.org/2008/conformance"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="
  http://xbrl.org/2008/conformance 
  ../../../infrastructure/test.xsd">
  <creator>
    <name>Takahide Muramoto, Hitoshi Okumura, Shigehisa Miyano</name>
    <email>taka.muramoto@jp.fujitsu.com, okmr@jp.fujitsu.com, s-miyano@jp.fujitsu.com</email>
  </creator>
  <number>42210</number>
  <name>Concept Name Filter Processing</name>
  <description>
    Test concept name filter processing
  </description>
  <reference specification="CONCEPT-FILTER" id="sec-concept-name-filter"/>

  <variation id="V-01">
    <name>Test concept name filter by QName.</name>
    <description>
      The concept name must be "eg:a".
    </description>
    <reference specification="CONCEPT-FILTER" id="example-concept-name-filters"/>
    <data>
      <schema>42210-conceptNameFilter-concepts.xsd</schema>
      <linkbase>42210-conceptNameFilter-qname-formula.xml</linkbase>
      <instance readMeFirst="true">42210-conceptNameFilter-qname-instance.xml</instance>
    </data>
    <result>
      <instance>42210-conceptNameFilter-qname-result.xml</instance>
    </result>
  </variation>

  <variation id="V-02">
    <name>Test concept name filter by expression for one of two QNames.</name>
    <description>
      The concept name must be either "eg:a" or "eg:b".
    </description>
    <reference specification="CONCEPT-FILTER" id="example-concept-name-filters"/>
    <data>
      <schema>42210-conceptNameFilter-concepts.xsd</schema>
      <linkbase>42210-conceptNameFilter-two-qnames-formula.xml</linkbase>
      <instance readMeFirst="true">42210-conceptNameFilter-two-qnames-instance.xml</instance>
    </data>
    <result>
      <instance>42210-conceptNameFilter-two-qnames-result.xml</instance>
    </result>
  </variation>

  <variation id="V-03">
    <name>Test concept name filter by expression for another variable's QName.</name>
    <description>
      The concept name must be the same as the concept name of the node accessed by the XPath variable reference "$v:v0".
    </description>
    <reference specification="CONCEPT-FILTER" id="example-concept-name-filters"/>
    <data>
      <schema>42210-conceptNameFilter-concepts.xsd</schema>
      <linkbase>42210-conceptNameFilter-varref-qname-formula.xml</linkbase>
      <instance readMeFirst="true">42210-conceptNameFilter-varref-qname-instance.xml</instance>
    </data>
    <result>
      <instance>42210-conceptNameFilter-varref-qname-result.xml</instance>
    </result>
  </variation>

</testcase>

