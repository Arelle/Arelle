<testcase
xmlns="http://xbrl.org/2008/conformance"
xmlns:xbrlfe="http://www.xml.org/2008/formula/error" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="
  http://xbrl.org/2008/conformance 
  ../../../infrastructure/test.xsd">
  <creator>
    <name>Takahide Muramoto, Hitoshi Okumura, Shigehisa Miyano</name>
    <email>taka.muramoto@jp.fujitsu.com, okmr@jp.fujitsu.com, s-miyano@jp.fujitsu.com</email>
  </creator>
  <number>48240</number>
  <name>Period-Instant Filter Processing</name>
  <description>
    Test period-instant filter processing
  </description>
  <reference specification="PERIOD-FILTER" id="sec-period-instant-filter"/>

  <variation id="V-01">
    <name>Test filter by comparing the instant period's date.</name>
    <description>The fact must be reported as at the end of the day of April 1, 2006.</description>
    <reference specification="PERIOD-FILTER" id="eg-period-instant-filters"/>
    <data>
      <schema>48240-periodInstantFilter-concepts.xsd</schema>
      <linkbase>48240-periodInstantFilter-date-formula.xml</linkbase>
      <instance readMeFirst="true">48240-periodInstantFilter-date-instance.xml</instance>
    </data>
    <result>
      <instance>48240-periodInstantFilter-result.xml</instance>
    </result>
  </variation>

  <variation id="V-02">
    <name>Test filter by comparing both the instant period's date and its time.</name>
    <description>The fact must be reported as at the start of the day of April 2, 2006.</description>
    <reference specification="PERIOD-FILTER" id="eg-period-instant-filters"/>
    <data>
      <schema>48240-periodInstantFilter-concepts.xsd</schema>
      <linkbase>48240-periodInstantFilter-datetime-formula.xml</linkbase>
      <instance readMeFirst="true">48240-periodInstantFilter-datetime-instance.xml</instance>
    </data>
    <result>
      <instance>48240-periodInstantFilter-result.xml</instance>
    </result>
  </variation>

</testcase>

