<testcase
xmlns="http://xbrl.org/2008/conformance"
xmlns:xbrlfe="http://www.xml.org/2008/formula/error" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="
  http://xbrl.org/2008/conformance 
  ../../../infrastructure/test.xsd">
  <creator>
    <name>Takahide Muramoto, Hitoshi Okumura, Shigehisa Miyano</name>
    <email>taka.muramoto@jp.fujitsu.com, okmr@jp.fujitsu.com, s-miyano@jp.fujitsu.com</email>
  </creator>
  <number>50220</number>
  <name>Scenario Filter Processing</name>
  <description>
    Test scenario filter processing
  </description>
  <reference specification="SEGMENT-SCENARIO-FILTER" id="sec-scenario-filter"/>

  <variation id="V-01">
    <name>Test filter by checking whether the context contains the scenario.</name>
    <description>The fact's context must contain the scenario. In addition, this scenario content is not based upon the explicit or typed dimensions defined in the XBRL Dimensions Specification.</description>
    <reference specification="SEGMENT-SCENARIO-FILTER" id="example-scenario-filters"/>
    <data>
      <schema>50220-scenarioFilter-concepts.xsd</schema>
      <linkbase>50220-scenarioFilter-exist-formula.xml</linkbase>
      <instance readMeFirst="true">50220-scenarioFilter-exist-instance.xml</instance>
    </data>
    <result>
      <instance>50220-scenarioFilter-exist-result.xml</instance>
    </result>
  </variation>

  <variation id="V-02">
    <name>Test filter by checking whether the context contains the scenario that has the specified child element.</name>
    <description>The fact's context must contain the scenario that has the child element "eg:m". In addition, this scenario content is not based upon the explicit or typed dimensions defined in the XBRL Dimensions Specification.</description>
    <reference specification="SEGMENT-SCENARIO-FILTER" id="example-scenario-filters"/>
    <data>
      <schema>50220-scenarioFilter-concepts.xsd</schema>
      <linkbase>50220-scenarioFilter-child-formula.xml</linkbase>
      <instance readMeFirst="true">50220-scenarioFilter-child-instance.xml</instance>
    </data>
    <result>
      <instance>50220-scenarioFilter-child-result.xml</instance>
    </result>
  </variation>

</testcase>

