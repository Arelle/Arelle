<testcase
xmlns="http://xbrl.org/2008/conformance"
xmlns:xbrlfe="http://xbrl.org/2008/formula/error"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="
  http://xbrl.org/2008/conformance 
  ../../../infrastructure/test.xsd">
  <creator>
    <name>Pablo Navarro Salvador, Herm Fischer</name>
    <email>pns.atos@gmail.com, fischer@markv.com</email>
  </creator>
  <number>11062</number>
  <name>Open Context Component (OCC) rules in formulae. </name>
  <description>
    Formula Static Analysis Test.
    An error must be thrown if an dimension 
    rule does not have any child elements 
    and does not have a SAV for the dimension 
    that it identifies with its @dimension attribute.
  </description>
  <reference specification="FORMULA" id="sec-dimension-rules"/>
  <variation id="V-01">
    <description>
      The explicit dimension rule does not have any child elements
      and does not have a SAV for the dimension 
      that it identifies with its @dimension attribute
    </description>
  <reference specification="FORMULA" id="error-missing-sav-for-explicit-dimension-rule"/>
    <data>
      <schema readMeFirst="true">11062-v01-OCCdim-tests.xsd</schema>
      <linkbase>11062-v01-OCCdim-tests-definition.xml</linkbase>
      <linkbase>11062-v01-OCCdim-tests-formula.xml</linkbase>
    </data>
    <result>
      <error>xbrlfe:missingSAVForExplicitDimensionRule</error>
    </result>
  </variation>

  <variation id="V-02">
    <description>
      The typed dimension rule does not have any child elements
      and does not have a SAV for the dimension 
      that it identifies with its @dimension attribute
    </description>
  <reference specification="FORMULA" id="error-missing-sav-for-typed-dimension-rule"/>
    <data>
      <schema readMeFirst="true">11062-v02-OCCdim-tests.xsd</schema>
      <linkbase>11062-v02-OCCdim-tests-definition.xml</linkbase>
      <linkbase>11062-v02-OCCdim-tests-formula.xml</linkbase>
    </data>
    <result>
      <error>xbrlfe:missingSAVForTypedDimensionRule</error>
    </result>
  </variation>


</testcase>




