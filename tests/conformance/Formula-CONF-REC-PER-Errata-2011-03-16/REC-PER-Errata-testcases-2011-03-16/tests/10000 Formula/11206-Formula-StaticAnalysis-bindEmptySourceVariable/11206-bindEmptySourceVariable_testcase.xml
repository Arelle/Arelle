<testcase
xmlns="http://xbrl.org/2008/conformance"
xmlns:xbrlfe="http://xbrl.org/2008/formula/error" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="
  http://xbrl.org/2008/conformance 
  ../../../infrastructure/test.xsd">
  <creator>
    <name>Pablo Navarro Salvador, Herm Fischer</name>
    <email>pns.atos@gmail.com, fischer@markv.com</email>
  </creator>
  <number>11206</number>
  <name>Aspect rules in Formulae. Static Analysis</name>
  <description>
      An error must be thrown if a formula's source 
      contains the QName of a fact variable 
      that can bind to an empty sequence. 
  </description>
  <reference specification="FORMULA" id="error-bind-empty-source-variable"/>    

  <variation id="V-01">
    <description>
       The source of a formula contains a QName 
       of a fact variable that can bind to the empty sequence.
    </description>
    <data>
      <schema readMeFirst="true">11206-sourceVarCanBindEmpty.xsd</schema>
      <linkbase>11206-sourceVarCanBindEmpty-formula.xml</linkbase>
    </data>
    <result>
      <error>xbrlfe:bindEmptySourceVariable</error>
    </result>
  </variation>
 
  <variation id="V-02">
    <description>
       The source of a formula contains a QName 
       of a fact variable that can bind to a fallback variable that
       has a QName expression that evaluates to an empty sequence.
    </description>
    <data>
      <schema>11206-sourceVarCanBindEmpty.xsd</schema>
      <linkbase>11206-sourceVarCanBindEmpty-2-formula.xml</linkbase>
      <instance readMeFirst="true">11206-sourceVarCanBindEmpty-2-instance.xml</instance>
    </data>
    <result>
      <error>xbrlfe:bindEmptySourceVariable</error>
    </result>
  </variation>
 
</testcase>