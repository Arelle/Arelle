<?xml-stylesheet type="text/xsl" href="../../../infrastructure/test.xsl"?>
<testcase
xmlns="http://xbrl.org/2008/conformance"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="
  http://xbrl.org/2008/conformance 
  ../../../infrastructure/test.xsd">
  <creator>
    <name>Herm Fischer</name>
    <email>fischer@markv.com</email>
  </creator>
  <number>34110</number>
  <name>Multi Assertion Processing</name>
  <description>
    Assertion testing of multiple kinds of assertions together
  </description>
  <reference specification="EXISTENCE-ASSERTION" id="sec-syntax-ea-resources"/>         

  <variation id="V-01">
    <name>Existence and Consistency Formula share Variable Sets</name>
    <description>
      Similar to Finrep testing, formula a = b + c checked for consistency, all variables must exist and be non-nil, so same fact variables and arcs are shared.  Existency assertion and formula have same label to effect arc sharing. 
    </description>
    <reference specification="EXISTENCE-ASSERTION" id="sec-syntax-ea-resources"/>         
    <data>
      <schema>34110-multiAssertion-concepts.xsd</schema>
      <linkbase>34110-existence-consistency-sharedArcs-formula.xml</linkbase>
      <instance readMeFirst="true">34110-a-eq-bcd-instance.xml</instance>
    </data>
    <result>
      <assertionTests 
         assertionID="existence_assertion"
         countSatisfied="1"
         countNotSatisfied="0" />
      <assertionTests 
         assertionID="consistency_assertion"
         countSatisfied="1"
         countNotSatisfied="0" />
      <instance>34110-a-eq-bcd-result.xml</instance>
    </result>
  </variation>

  <variation id="V-02">
    <name>Existence and Value assertions share Variable Sets</name>
    <description>
      Similar to Finrep testing, formula abs(a - b - c -d) &lt; tolerance radius checked for consistency, allows fallbacks and be non-nil, so same fact variables and arcs are shared.  Existence assertion and formula have same label to effect arc sharing.  (Similar to V-01, but since a may also fall back, as well as b, or c, can't be done as a consistency expression because formula would not fire if a falls back.)
    </description>
    <reference specification="EXISTENCE-ASSERTION" id="sec-syntax-ea-resources"/>         
    <data>
      <schema>34110-multiAssertion-concepts.xsd</schema>
      <linkbase>34110-existence-value-sharedArcs-formula.xml</linkbase>
      <instance readMeFirst="true">34110-abcd-1-instance.xml</instance>
    </data>
    <result>
      <assertionTests 
         assertionID="existence_assertion"
         countSatisfied="1"
         countNotSatisfied="0" />
      <assertionTests 
         assertionID="value_assertion"
         countSatisfied="1"
         countNotSatisfied="0" />
    </result>
  </variation>

  <variation id="V-03">
    <name>Existence and Value assertions share Variable Sets, a missing</name>
    <description>
      Same as V-02, $a missing.
    </description>
    <reference specification="EXISTENCE-ASSERTION" id="sec-syntax-ea-resources"/>         
    <data>
      <schema>34110-multiAssertion-concepts.xsd</schema>
      <linkbase>34110-existence-value-sharedArcs-formula.xml</linkbase>
      <instance readMeFirst="true">34110-abcd-2-instance.xml</instance>
    </data>
    <result>
      <assertionTests 
         assertionID="existence_assertion"
         countSatisfied="1"
         countNotSatisfied="0" />
      <assertionTests 
         assertionID="value_assertion"
         countSatisfied="1"
         countNotSatisfied="0" />
    </result>
  </variation>

  <variation id="V-04">
    <name>Existence and Value assertions share Variable Sets, value wrong</name>
    <description>
      Same as V-02, but values don't add up.
    </description>
    <reference specification="EXISTENCE-ASSERTION" id="sec-syntax-ea-resources"/>         
    <data>
      <schema>34110-multiAssertion-concepts.xsd</schema>
      <linkbase>34110-existence-value-sharedArcs-formula.xml</linkbase>
      <instance readMeFirst="true">34110-abcd-3-instance.xml</instance>
    </data>
    <result>
      <assertionTests 
         assertionID="existence_assertion"
         countSatisfied="1"
         countNotSatisfied="0" />
      <assertionTests 
         assertionID="value_assertion"
         countSatisfied="0"
         countNotSatisfied="1" />
    </result>
  </variation>

  <variation id="V-05">
    <name>Existence and Value assertions share Variable Sets, all missing</name>
    <description>
      Same as V-02, all of a, b, c, d missing.
    </description>
    <reference specification="EXISTENCE-ASSERTION" id="sec-syntax-ea-resources"/>         
    <data>
      <schema>34110-multiAssertion-concepts.xsd</schema>
      <linkbase>34110-existence-value-sharedArcs-formula.xml</linkbase>
      <instance readMeFirst="true">34110-abcd-4-instance.xml</instance>
    </data>
    <result>
      <assertionTests 
         assertionID="existence_assertion"
         countSatisfied="0"
         countNotSatisfied="1" />
      <assertionTests 
         assertionID="value_assertion"
         countSatisfied="0"
         countNotSatisfied="0" />
    </result>
  </variation>


</testcase>








