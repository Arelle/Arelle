<?xml-stylesheet type="text/xsl" href="../../../infrastructure/test.xsl"?>
<testcase
xmlns="http://xbrl.org/2008/conformance"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="
  http://xbrl.org/2008/conformance 
  ../../../infrastructure/test.xsd">
  <creator>
    <name>Herm Fischer</name>
    <email>fischer@markv.com</email>
  </creator>
  <number>32210</number>
  <name>Existence Assertion Processing</name>
  <description>
    Assertion testing of existence expression tests for evaluations of reported fact items.
  </description>
  <reference specification="EXISTENCE-ASSERTION" id="sec-syntax-ea-resources"/>         

  <variation id="V-01">
    <name>Test absent implies test of any cardinality of existence</name>
    <description>
      Test attribute absent evaluates consistently.
    </description>
    <reference specification="EXISTENCE-ASSERTION" id="sec-syntax-ea-resources"/>         
    <data>
      <schema>32210-existenceAssertion-concepts.xsd</schema>
      <linkbase>32210-noTest-formula.xml</linkbase>
      <instance readMeFirst="true">32210-noTest-1-item-instance.xml</instance>
    </data>
    <result>
      <assertionTests 
         assertionID="assertion"
         countSatisfied="1"
         countNotSatisfied="0" />
    </result>
  </variation>

  <variation id="V-02">
    <name>Test absent implies test of any cardinality of existence, no items, assertion fails.</name>
    <description>
      Test attribute absent evaluates correctly, no items, assertion fails.
    </description>
    <reference specification="EXISTENCE-ASSERTION" id="sec-syntax-ea-resources"/>         
    <data>
      <schema>32210-existenceAssertion-concepts.xsd</schema>
      <linkbase>32210-noTest-formula.xml</linkbase>
      <instance readMeFirst="true">32210-noTest-no-items-instance.xml</instance>
    </data>
    <result>
      <assertionTests 
         assertionID="assertion"
         countSatisfied="0"
         countNotSatisfied="1" />
    </result>
  </variation>

  <variation id="V-03">
    <name>Test must have an effective boolean result</name>
    <description>
      Test = 'true()' evaluates consistently.
    </description>
    <reference specification="EXISTENCE-ASSERTION" id="sec-syntax-ea-resources"/>         
    <data>
      <schema>32210-existenceAssertion-concepts.xsd</schema>
      <linkbase>32210-effectiveBooleanResult-formula.xml</linkbase>
      <instance readMeFirst="true">32210-effectiveBooleanResult-instance.xml</instance>
    </data>
    <result>
      <assertionTests 
         assertionID="assertion"
         countSatisfied="1"
         countNotSatisfied="0" />
    </result>
  </variation>

  <variation id="V-04">
    <name>Test doesn't have an effective boolean result, assertion fails</name>
    <description>
      Test = 'QName' typed atomic object can't convert to boolean value, raises XPath-defined error (or otherwise assertion fails).
    </description>
    <reference specification="EXISTENCE-ASSERTION" id="sec-syntax-ea-resources"/>         
    <data>
      <schema>32210-existenceAssertion-concepts.xsd</schema>
      <linkbase>32210-noEffectiveBooleanResult-formula.xml</linkbase>
      <instance readMeFirst="true">32210-noEffectiveBooleanResult-instance.xml</instance>
    </data>
    <result>
      <error xmlns:err="http://www.w3.org/2005/xqt-errors">err:FORG0006</error>
    </result>
  </variation>

  <variation id="V-05">
    <name>Context node is a cardinality</name>
    <description>
      Test that it is an integer equal to 5 evaluates consistently.  Assertion
      will fail if it is not xs:integer (a cardinality) or value is wrong for
      this instance.
    </description>
    <reference specification="EXISTENCE-ASSERTION" id="sec-syntax-ea-resources"/>         
    <data>
      <schema>32210-existenceAssertion-concepts.xsd</schema>
      <linkbase>32210-contextIsCardinality-formula.xml</linkbase>
      <instance readMeFirst="true">32210-contextIsCardinality-instance.xml</instance>
    </data>
    <result>
      <assertionTests 
         assertionID="assertion"
         countSatisfied="1"
         countNotSatisfied="0" />
    </result>
  </variation>

  <variation id="V-06">
    <name>Parameters usable by test expression</name>
    <description>
      Test that cardinality compared to parameter evaluates consistently.
    </description>
    <reference specification="EXISTENCE-ASSERTION" id="sec-syntax-ea-resources"/>         
    <data>
      <schema>32210-existenceAssertion-concepts.xsd</schema>
      <linkbase>32210-testParam-formula.xml</linkbase>
      <instance readMeFirst="true">32210-testParam-ok-instance.xml</instance>
    </data>
    <result>
      <assertionTests 
         assertionID="assertion"
         countSatisfied="1"
         countNotSatisfied="0" />
    </result>
  </variation>

  <variation id="V-07">
    <name>Parameters usable by test expression, assertion failure</name>
    <description>
      Test that cardinality of instance does not compare to parameter.
    </description>
    <reference specification="EXISTENCE-ASSERTION" id="sec-syntax-ea-resources"/>         
    <data>
      <schema>32210-existenceAssertion-concepts.xsd</schema>
      <linkbase>32210-testParam-formula.xml</linkbase>
      <instance readMeFirst="true">32210-testParam-not-ok-instance.xml</instance>
    </data>
    <result>
      <assertionTests 
         assertionID="assertion"
         countSatisfied="0"
         countNotSatisfied="1" />
    </result>
  </variation>


</testcase>



